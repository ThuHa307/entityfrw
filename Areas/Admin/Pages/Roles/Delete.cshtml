@page "/admin/delete-role/{roleid}"
@model App.Admin.Roles.DeleteModel
@{
    ViewData["title"] = "Update Role";
}
<h1>@ViewData["title"]</h1>

<partial name="_StatusMessage" model="@Model.StatusMessage"/>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>Warning! Delete role will delete all data of the role.</p>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-primary" asp-page="./Index">List of roles</a>
            </div>
        </form>
    </div>
</div>

@* Validate without submit *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
